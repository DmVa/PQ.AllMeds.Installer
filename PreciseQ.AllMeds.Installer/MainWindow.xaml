<Window x:Class="PreciseQ.AllMeds.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreciseQ.AllMeds.Installer"
        xmlns:view="clr-namespace:PreciseQ.AllMeds.Installer.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"  
        Title="AMPM Updater" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <Button x:Name="buttonSaveSetting" Content="Save Settings" Margin="5" Height="30" Command="{Binding SaveCommand}" />
            <Button x:Name="buttonAddSetting" Content="Add Application" Margin="5" Height="30" Click="buttonAddSetting_Click" Command="{Binding BaseUICommand}" />
            <Button x:Name="buttonEditApplication" Content="Edit Selected  Application" Margin="5" Height="30" Click="buttonEditSetting_Click"  Command="{Binding BaseUICommand}" />
            <Button x:Name="buttonCloneAplication" Content="Clone Selected  Application" Margin="5" Height="30" Click="buttonCloneSetting_Click"  Command="{Binding BaseUICommand}" />
            <Button x:Name="buttonDeleteApplication" Content="Delete Selected Application" Margin="5" Height="30" Click="buttonDeleteApplication_Click" Command="{Binding BaseUICommand}"/>
            <Button x:Name="buttonUpdateSelected" Content="Update Checked Applications" Margin="5" Height="30" Command="{Binding DoUpdateCommand}" />
        </StackPanel>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            
            <view:SiteInstance Grid.Row="0" DataContext="{Binding SiteConfig}"></view:SiteInstance>

            <ListView Grid.Row="1" x:Name="InstancesList" ItemsSource="{Binding Path=SiteConfig.Instances}" SelectedIndex="0">
                <ListView.View>
                    <GridView>
                        
                        <GridViewColumn Header="Do Update"  Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsChecked}"></CheckBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Application Name"  Width="200" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding VirtualApplicationName}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Label VerticalAlignment="Center">Update log</Label>
                <TextBox  Grid.Row="1" Text="{Binding Path=UpdateLogText, Mode=TwoWay}"  Margin="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ></TextBox>
            </Grid>

        </Grid>
    </Grid>
</Window>
